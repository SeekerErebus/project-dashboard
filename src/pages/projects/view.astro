  function bindEventListeners(project: Project) {
    // Edit button
    document.getElementById('edit-btn')?.addEventListener('click', () => {
      const panel = document.getElementById('edit-form-panel')!;
      panel.classList.remove('hidden');
      (document.getElementById('ef-title') as HTMLInputElement).value = project.title;
      (document.getElementById('ef-status') as HTMLSelectElement).value = project.status;
      (document.getElementById('ef-priority') as HTMLSelectElement).value = project.priority;
      (document.getElementById('ef-progress') as HTMLInputElement).value = String(project.progress);
      (document.getElementById('ef-budget') as HTMLInputElement).value = String(project.budget);
      (document.getElementById('ef-spent') as HTMLInputElement).value = String(project.spent);
      (document.getElementById('ef-due') as HTMLInputElement).value = project.dueDate || '';
      (document.getElementById('ef-description') as HTMLTextAreaElement).value = project.description;
      (document.getElementById('ef-notes') as HTMLTextAreaElement).value = project.notes;
    });

    // Task toggle (cycle: todo -> in-progress -> done -> todo)
    document.querySelectorAll('.task-toggle').forEach(btn => {
      btn.addEventListener('click', () => {
        const taskId = (btn as HTMLElement).dataset.taskId!;
        const current = (btn as HTMLElement).dataset.current as Task['status'];
        const next: Task['status'] = current === 'todo' ? 'in-progress' : current === 'in-progress' ? 'done' : 'todo';
        updateTask(taskId, { status: next });
        renderPage();
      });
    });

    // Task delete
    document.querySelectorAll('.task-delete').forEach(btn => {
      btn.addEventListener('click', () => {
        const taskId = (btn as HTMLElement).dataset.taskId!;
        if (confirm('Delete this task?')) {
          deleteTask(taskId);
          renderPage();
        }
      });
    });

    // Prompt expand toggle
    document.querySelectorAll('.proj-task-expand').forEach(btn => {
      btn.addEventListener('click', () => {
        const taskId = (btn as HTMLElement).dataset.taskId!;
        const promptEl = document.querySelector(`.proj-task-prompt[data-task-id="${taskId}"]`);
        if (promptEl) promptEl.classList.toggle('hidden');
      });
    });

    // Add task button
    document.getElementById('add-task-btn')?.addEventListener('click', () => {
      document.getElementById('add-task-form')!.classList.remove('hidden');
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    renderPage();

    // Cancel edit
    document.getElementById('cancel-edit-btn')!.addEventListener('click', () => {
      document.getElementById('edit-form-panel')!.classList.add('hidden');
    });

    // Save edit
    document.getElementById('edit-form')!.addEventListener('submit', (e) => {
      e.preventDefault();
      const title = (document.getElementById('ef-title') as HTMLInputElement).value.trim();
      if (!title) return;

      updateProject(projectId!, {
        title,
        status: (document.getElementById('ef-status') as HTMLSelectElement).value as Project['status'],
        priority: (document.getElementById('ef-priority') as HTMLSelectElement).value as Project['priority'],
        progress: parseInt((document.getElementById('ef-progress') as HTMLInputElement).value) || 0,
        budget: parseInt((document.getElementById('ef-budget') as HTMLInputElement).value) || 0,
        spent: parseInt((document.getElementById('ef-spent') as HTMLInputElement).value) || 0,
        dueDate: (document.getElementById('ef-due') as HTMLInputElement).value || null,
        description: (document.getElementById('ef-description') as HTMLTextAreaElement).value.trim(),
        notes: (document.getElementById('ef-notes') as HTMLTextAreaElement).value.trim(),
      });

      document.getElementById('edit-form-panel')!.classList.add('hidden');
      renderPage();
    });

    // Cancel add task
    document.getElementById('cancel-task-btn')!.addEventListener('click', () => {
      document.getElementById('add-task-form')!.classList.add('hidden');
    });

    // Add task submit
    document.getElementById('new-task-form')!.addEventListener('submit', (e) => {
      e.preventDefault();
      const title = (document.getElementById('tf-title') as HTMLInputElement).value.trim();
      if (!title) return;

      addTask({
        title,
        project: projectId!,
        priority: (document.getElementById('tf-priority') as HTMLSelectElement).value as Task['priority'],
        status: 'todo',
        dueDate: (document.getElementById('tf-due') as HTMLInputElement).value || '',
        description: (document.getElementById('tf-description') as HTMLInputElement).value.trim(),
        prompt: (document.getElementById('tf-prompt') as HTMLTextAreaElement).value.trim(),
      });

      (document.getElementById('new-task-form') as HTMLFormElement).reset();
      document.getElementById('add-task-form')!.classList.add('hidden');
      renderPage();
    });
  });
</script>
